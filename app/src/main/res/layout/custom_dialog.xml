<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <GridLayout
        android:layout_width="fill_parent"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text"
            android:layout_marginLeft="@dimen/padding_min"
            android:text="@string/OK"
            android:textColor="@color/cool_blue"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceLarge"    />

        <TextView
            android:id="@+id/text_alert"
            android:layout_marginTop="@dimen/padding_min"
            android:layout_marginLeft="@dimen/padding_min"
            android:text="@string/OK_message"
            android:textColor="@color/cool_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceLarge"    />

        <TextView
                android:id="@+id/text_alert2"
                android:layout_marginTop="@dimen/padding_min"
                android:layout_marginLeft="@dimen/padding_min"
                android:text="@string/add_message"
                android:textColor="@color/cool_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/textAppearanceLarge"    />

        </GridLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="@dimen/padding_min"
        android:id="@+id/container"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginLeft="@dimen/padding_min"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:textStyle="bold"
            android:textColor="@color/cool_blue"
            android:background="@drawable/button_selector"
            />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/OK"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1.0"
            android:textColor="@color/cool_blue"
            android:background="@drawable/button_selector"
            />


        </LinearLayout>


</RelativeLayout>